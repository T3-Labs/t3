# T3 CLI Environment Variables
# Copy this file to .env for local development

# General Settings
T3_DEBUG=false
T3_LOG_LEVEL=INFO

# Configuration
T3_CONFIG_PATH=~/.t3/config.json

# Project Templates
T3_TEMPLATES_PATH=~/.t3/templates

# Cache Settings
T3_CACHE_DIR=~/.t3/cache
T3_CACHE_ENABLED=true
T3_CACHE_TTL=3600

# Development Settings
T3_DEV_MODE=false
T3_VERBOSE=false

# Colors and Theming
T3_NO_COLOR=false
T3_FORCE_COLOR=false
T3_THEME=auto

# API Settings (for future extensions)
# T3_API_URL=https://api.t3labs.com
# T3_API_KEY=your_api_key_here
# T3_API_TIMEOUT=30

# Database Settings (for future features)
# T3_DB_URL=sqlite:///~/.t3/database.db
# T3_DB_TIMEOUT=5

# Notifications (for future features)
# T3_NOTIFICATIONS_ENABLED=true
# T3_NOTIFICATION_SOUND=true